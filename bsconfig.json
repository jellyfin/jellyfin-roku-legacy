{
    "files": [
        "manifest",
        "source/**/*.*",
        "components/**/*.*",
        "images/**/*.*",
        "resources/**/*.*",
        "locale/**/*.*",
        "settings/*.*"
    ],
    "plugins": [
        "@rokucommunity/bslint",
        "roku-log-bsc-plugin"
    ],
    "rokuLog": {
        "insertPkgPath": true
    },
    "diagnosticFilters": [
        "**/roku_modules/**/*",
        "**/testFramework/*",
        "**/tests/*"
    ],
    "diagnosticSeverityOverrides": {
        "LINT1001": "warn",
        "1001": "warn"
    },
    "sourceMap": true,
    // "autoImportComponentScript": true,
    "allowBrighterScriptInBrightScript": true,
    "stagingDir": "build/staging",
    "retainStagingDir": true
}