{
    "files": [
        "manifest",
        "source/**/*.*",
        "components/**/*.*",
        "images/**/*.*",
        "resources/**/*.*",
        "locale/en_US/translations.ts",
        "locale/en_GB/translations.ts",
        "locale/fr_CA/translations.ts",
        "locale/es_ES/translations.ts",
        "locale/de_DE/translations.ts",
        "locale/it_IT/translations.ts",
        "locale/pt_BR/translations.ts",
        "settings/**/*.*",
        {
            "src": "resources/branding/release/**/*",
            "dest": "images"
        }
    ],
    "plugins": [
        "@rokucommunity/bslint",
        "roku-log-bsc-plugin"
    ],
    "rokuLog": {
        "strip": true,
        "insertPkgPath": false,
        "removeComments": true
    },
    "diagnosticFilters": [
        "**/roku_modules/**/*",
        "**/testFramework/*",
        "**/tests/*"
    ],
    "outFile": "./out/Jellyfin-Roku-release",
    "retainStagingDir": false
}