<?xml version="1.0" encoding="utf-8"?>
<component name="SubtitleSearchView" extends="JFScreen" initialFocus="searchButton">
  <children>
    <LayoutGroup id="mainGroup" layoutDirection="horiz" translation="[96, 175]" itemSpacings="[75]">
      <Poster id="moviePoster" translation="[250,150]" width="300" height="450" />

      <LayoutGroup layoutDirection="vert" itemSpacings="[30]">
        <Label id="headerText" font="font:LargeBoldSystemFont" text="Search for Subtitles" width="690" />

        <LayoutGroup layoutDirection="vert" itemSpacings="[10]">
          <Label id="fileNameLabel" font="font:MediumBoldSystemFont" text="File" />
          <scrollingLabel id="fileName" maxWidth="690" repeatCount="2" />
        </LayoutGroup>

        <LayoutGroup layoutDirection="vert" itemSpacings="[10]">
          <Label id="languageLabel" font="font:MediumBoldSystemFont" text="Language" />
          <TextButton id="languageButton" textColor="#aaaaaa" focusTextColor="#111111" iconSide="right" fontSize="35" background="#070707" focusBackground="#eeeeee" padding="35" icon="pkg:/images/icons/dropdown-light.png" focusIcon="pkg:/images/icons/dropdown-dark.png" text="" height="75" width="500" />
        </LayoutGroup>
        <ButtonGroup>
          <Button id="searchButton" text="Search" iconUri="" focusedIconUri="" />
        </ButtonGroup>
      </LayoutGroup>

      <LayoutGroup layoutDirection="vert" itemSpacings="[30]">
        <Rectangle width="600" height="710" color="0x202020ff">
          <Label translation="[30, 30]" id="headerText" font="font:LargeBoldSystemFont" text="My Subtitles" />
          <MarkupList id="mySubtitleList" itemComponentName="SubtitleItem" translation="[60, 85]" itemSize="[480,100]" numRows="6" vertFocusAnimationStyle="floatingFocus" />
        </Rectangle>
      </LayoutGroup>

    </LayoutGroup>
  </children>
  <interface>
    <field id="itemContent" type="node" onChange="onItemContentChanged" />
    <field id="cultures" type="array" onChange="setDefaultSubtitleLanguage" alwaysNotify="true" />
    <field id="preferredSubtitleLanguage" type="string" onChange="setDefaultSubtitleLanguage" alwaysNotify="true" />
    <field id="selectedCulture" type="assocarray" onChange="onSelectedCultureChanged" />
    <field id="subtitleLanguageButtonSelected" alias="languageButton.selected" />
    <field id="subtitleSearchButtonSelected" alias="searchButton.buttonSelected" />
    <field id="subtitleToDelete" type="node" />

  </interface>
</component>